<div class="related-pages">
    {% for related_path, score in related_pages %}
        {% set related = grav['pages'].get(related_path) %}

        {% if related %}
        {% set related_image = related.media.images | first %}

            <!-- <li>
                {% if config.plugins.relatedpages.show_score %}
                    <span class="score">{{ score }}</span>
                {% endif %}
                <a href="{{ related.url }}" title="{{ related.title }}">{{ related.title }}</a>
            </li> -->

            <div class="uk-card uk-card-default uk-grid-collapse uk-margin uk-margin-remove-left uk-box-shadow-small uk-box-shadow-hover-large uk-border-rounded uk-overflow-hidden" uk-grid>
                <div class="uk-card-media-left uk-cover-container uk-width-1-3@s" style="background-image: url({{ related_image.url }})"></div>
                <div class="uk-width-expand">
                    <div class="uk-card-body uk-text-left">
                        <h3 class="uk-card-title uk-margin-remove-bottom">
                            <a class="uk-link-reset uk-text-lead uk-text-capitalize" href="{{ related.url }}">{{ related.title }}</a>
                        </h3>
                        <p class="uk-margin-remove">
                            <time datetime="{{ related.date|date('d') }} {{ 'MONTHS_OF_THE_YEAR'|ta(related.date|date('n') - 1) }}">
                                <span>{{ related.date|date('d') }}
                                    {{ 'MONTHS_OF_THE_YEAR'|ta(related.date|date('n') - 1) }}
                                    {{ related.date|date('Y') }}</span>
                            </time>
                        </p>
                        <p>{{related.summary |safe_truncate(150) }}
                            (...)</p>
                          <a class="uk-button uk-button-default" href="{{ related.url }}">WiÄ™cej</a>
                    </div>
                </div>
            </div>

        {% endif %}
    {% endfor %}
</div>
