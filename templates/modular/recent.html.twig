<div class="uk-section uk-section-muted uk-preserve-color">
    <div class="uk-container">
        <h1 class="uk-heading-line uk-text-center">
            <span>Ostatnie wpisy na blogu</span>
        </h1>
        <div class="uk-child-width-1-2@m uk-child-width-1-3@l uk-grid-match" uk-scrollspy="target: > div; cls:uk-animation-slide-bottom-small; delay: 500" uk-grid>
            {% for p in page.find('/blog').children.order('date', 'desc').slice(0, 6) %}
                {% set first_image = p.media.images | first %}
                {% set blog = p.collection() %}
                <div class="">
                    {% if first_image %}
                        <div class="uk-card uk-card-default uk-box-shadow-small uk-box-shadow-hover-large uk-border-rounded uk-overflow-hidden">
                            <div class="uk-card-media-top uk-background-cover uk-height-medium uk-position-relative" style="background-image: linear-gradient(
                  rgba(0, 0, 0, 0.1) 40%,
                  rgba(0, 0, 0, 1)
                ), linear-gradient( 0deg,
                  rgba(0, 0, 0, 0.1) 70%,
                  rgba(0, 0, 0, 0.9)), url({{ first_image.url }});">
                              <div class="uk-position-top uk-overlay uk-light">
                                <p class="uk-margin-remove">
                                    <time datetime="{{ p.date|date('d') }} {{ 'MONTHS_OF_THE_YEAR'|ta(p.date|date('n') - 1) }}">
                                        <span>{{ p.date|date('d') }}
                                            {{ 'MONTHS_OF_THE_YEAR'|ta(p.date|date('n') - 1) }}
                                            {{ p.date|date('Y') }}</span>
                                    </time>
                                </p>
                              </div>
                              <div class="uk-position-bottom uk-overlay uk-light">
                                {% if p.taxonomy.tag %}
                                    <span>
                                        {% for tag in p.taxonomy.tag %}
                                            <span uk-icon="icon: tag" class="uk-margin-xsmall-right"></span>
                                            <a href="{{ p.parent.url|rtrim('/') }}/tag{{ config.system.param_sep }}{{ tag }}" class="p-category">{{ tag }}</a>
                                        {% endfor %}
                                    </span>
                                {% endif %}
                              </div>
                            </div>
                            <div class="uk-card-body blog-card--blank">
                                <h3 class="uk-heading-bullet uk-text-capitalize"><a class="uk-link-reset" href="{{p.url}}">{{ p.title }} <span class="uk-margin-small-right" uk-icon="icon: chevron-right" uk-scrollspy="cls: uk-animation-slide-left; repeat: true"></span></a></h3>
                                <p>{{p.summary |safe_truncate(150) }}</p>
                            </div>
                        </div>
                    {% else %}
                        <div class="uk-card uk-card-default uk-card-large uk-card-body uk-text-center uk-box-shadow-small uk-light uk-box-shadow-hover-large blog-card--blank" style="background: linear-gradient(#A58962,#876f4d);">
                            <h3 class="uk-heading-divider uk-text-capitalize"><a class="uk-link-reset" href="{{p.url}}">{{ p.title }} <span class="uk-margin-small-right" uk-icon="icon: chevron-right" uk-scrollspy="cls: uk-animation-slide-left; repeat: true"></span></a></h3>
                            <p>{{p.summary}}</p>
                        </div>
                    {% endif %}

                </div>

            {% endfor %}
        </div>
        <a href="{{ base_url }}/blog" class="uk-button uk-button-default uk-width-1-3 uk-margin-medium-top uk-align-center">WiÄ™cej</a>
    </div>
</div>
